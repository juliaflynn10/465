<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @topic.description %>
</p>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Date</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topic.references.each do |reference| %>
      <% if !reference.new_record? %>

	<tr>
        	<td><% link_to reference.URL, "#{reference.URL}", target: "_blank" %></td>
        	<td><%= reference.date %></td>
        	<td><%= link_to 'Destroy', reference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      	</tr>
	<% end %>
    <% end %>
  </tbody>
</table>

<br>
<h3>Create New Rating</h3>
<%= render 'references/form'%>


<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Show all Topics', topics_path %>
