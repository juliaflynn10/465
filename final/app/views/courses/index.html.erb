<p id="notice"><%= notice %></p>
<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th> Instructor </th>
      <th>Class Name</th>
     <% if current_user.teacher %>
	
      <th>Size</th>
      <th colspan="4"></th>
     <% else %>
       <th colspan="2"><th>
     <%end%>	
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
          <% @Users.each do |u| %>
		<% if u.id == course.user_id %>
		   <td><%= u.name %></td>
                <% end %>
          <%end%>
        <td><%= course.title %></td>
	<% if current_user.teacher && course.user_id == current_user.id%>
        <td><%= course.size %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'New Seating Chart', new_seating_chart_path(course) %></td>
	<%end%>
	   <% if !current_user.teacher && current_user.courses.include?(course.id)%>
		<td> DROP </td>
	   <% elsif !current_user.teacher && !current_user.courses.include?(course.id) %>
		<td> ADD  </td>
	   <%end%>
      <%end%>

      </tr>
  </tbody>
</table>

<br>
<% if current_user.teacher %>

<%= link_to 'Add New Course', new_course_path %>

<% end %>



